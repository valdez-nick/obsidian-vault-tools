{
  "mcpServers": {
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MEMORY_FILE_PATH": "[MEMORY_PATH]/memory.json"
      }
    },
    "web-fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"]
    },
    "github": {
      "command": "npx", 
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "[GITHUB_PERSONAL_ACCESS_TOKEN]"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "mcp-server-sequential-thinking"]
    },
    "obsidian-pm-intelligence": {
      "command": "/opt/homebrew/bin/node",
      "args": ["/path/to/your/obsidian-pm-intelligence.js"],
      "env": {
        "VAULT_PATH": "[VAULT_PATH]",
        "ENABLE_LEARNING": "true",
        "MEMORY_PATH": "[MEMORY_PATH]",
        "ENABLE_AGENT_ORCHESTRATION": "false",
        "LOG_LEVEL": "info"
      }
    },
    "confluence": {
      "command": "docker",
      "args": [
        "run", "-i", "--rm",
        "--platform", "linux/amd64",
        "ghcr.io/sooperset/mcp-atlassian:latest",
        "--confluence-url",
        "https://api.atlassian.com/ex/confluence/[CONFLUENCE_CLOUD_ID]",
        "--confluence-username",
        "[CONFLUENCE_EMAIL]",
        "--confluence-token",
        "[CONFLUENCE_TOKEN]",
        "--jira-url",
        "https://api.atlassian.com/ex/jira/[CONFLUENCE_CLOUD_ID]", 
        "--jira-username",
        "[CONFLUENCE_EMAIL]",
        "--jira-token",
        "[JIRA_TOKEN]"
      ]
    }
  }
}
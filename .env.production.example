# Production Environment Configuration
# Copy this file to .env.production and update the values

# Security Settings
API_KEY="your-secure-api-key-here"
JWT_SECRET="your-jwt-secret-key-here"
SECURITY_ENABLED=true
RATE_LIMITING_ENABLED=true
ENVIRONMENT=production

# Application Settings
OBSIDIAN_PM_SCRIPT_PATH="/path/to/obsidian-pm-intelligence.js"
VAULT_PATH="/path/to/your/vault"

# Logging
LOG_LEVEL=WARNING
LOG_FILE="/var/log/obsidian-vault-tools/app.log"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST_LIMIT=10

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_FAILED_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=15

# Database
DATABASE_ENCRYPTION_ENABLED=true
BACKUP_BEFORE_MODIFY=true

# Network Security
REQUIRE_HTTPS=true
CORS_ENABLED=false
ALLOWED_ORIGINS=""

# Monitoring
SENTRY_DSN=""  # Optional: Add Sentry DSN for error monitoring
METRICS_ENABLED=true